<%= form_for @question, :html => { :class => "form-horizontal question" } do |f| %>

    <% if @question.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @question.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="field">
 </div>

  <div class="control-group">
    <%= f.label :tag_list, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tag_list, :class => 'form-control' %>
    </div>
    <%= error_span(@question[:question]) %>
  </div>
  <div class="control-group">
    <%= f.label :question, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :question, :class => 'form-control' %>
    </div>
    <%= error_span(@question[:question]) %>
  </div>
  <div class="control-group">
    <%= f.label "Correct Answer", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :corr, :class => 'form-control' %>
    </div>
    <%= error_span(@question[:corr]) %>
  </div>
  <div class="control-group">
    <%= f.label "Answer 1", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ans1, :class => 'form-control' %>
    </div>
    <%= error_span(@question[:ans1]) %>
  </div>
  <div class="control-group">
    <%= f.label "Answer 2", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ans2, :class => 'form-control' %>
    </div>
    <%= error_span(@question[:ans2]) %>
  </div>
  <div class="control-group">
    <%= f.label "Answer 3", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ans3, :class => 'form-control' %>
    </div>
    <%= error_span(@question[:ans3]) %>
  </div>
  <div class="control-group">
    <%= f.label "Answer 4", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ans4, :class => 'form-control' %>
    </div>
    <%= error_span(@question[:ans4]) %>
  </div>
  <div class="control-group">
    <%= f.label "Difficulty (1-10)", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :diff, :class => 'form-control' %>
    </div>
    <%= error_span(@question[:diff]) %>
  </div>
  <div class="control-group">
    <%= f.label "Source URL", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :source, :class => 'form-control' %>
    </div>
    <%= error_span(@question[:source]) %>
  </div>
  <div class="control-group">
    <%= f.label "Response", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :response, :class => 'form-control' %>
    </div>
    <%= error_span(@question[:response]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            questions_path, :class => 'btn btn-custom2' %>

<% end %>
