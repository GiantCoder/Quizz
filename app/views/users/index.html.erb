<%- model_class = User -%>
<script type="text/javascript" src="public/javascripts/gray.js"></script>
<script type="text/javascript">

var themeA = {
    chart: {
        backgroundColor: {
            linearGradient: [255, 255, 255, 0],
            stops: [
                [0, 'rgb(255, 255, 255)'],
                [1, 'rgb(10, 30, 0)']
            ]
         }   
    },
    plotOptions: {
        line: {
            lineWidth: 3,
            marker: {
                enabled: true,
                radius: 5,
                fillColor: null,
                lineColor: 'rgba(210, 20, 10, 0.5)',
                symbol: 'square',
                states: {
                  hover: {
                    lineWidth: 5,
                    radius: 10,
                    lineColor: 'green'
                    }
                  }
                }
            }
        }
};
    Highcharts.setOptions(themeA);
</script>

<script type="text/javascript" charset="utf-8">
  $(function() {
    new Highcharts.Chart ({
      chart: {
        renderTo: "user_chart"
      },
      title: {
        text: "Users by Day"
      },
      xAxis: {
        type: "datetime"
      },
      yAxis: {
        title: {
          text: "# Users"
        }
      },
      tooltip: {
        formatter: function() {
          return Highcharts.dateFormat("%B %e, %Y", this.x) + ": " +
          this.y + " users";
        }
      },
      series: [{
        name: "Number of Users",
        pointInterval: <%= 1.day * 1000 %>,
        pointStart: <%= 4.weeks.ago.to_i * 1000 %>,
        data: <%= (4.weeks.ago.to_date..Date.today).map { |date| User.total_on(date) }.inspect %>
      }]
  });
});

</script>

<div id="user_chart" style="width:1100px; height: 450px;"></div>

<div class="page-header">
  <h1>Users</h1>
<!--  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1> -->
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:password) %></th>
      <th><%= model_class.human_attribute_name(:is_blocked) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, user_path(user) %></td>
        <td><%= image_tag gravatar_for(user) %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.is_blocked %></td>
        <td><%=l user.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_path(user), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_path(user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure you want to delete this user?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_path,
            :class => 'btn btn-primary' %>