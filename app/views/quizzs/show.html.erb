<%- model_class = Quizz -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:author) %>:</strong></dt>
  <dd><%= @quizz.author %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @quizz.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @quizz.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:question_total) %>:</strong></dt>
  <dd><%= @quizz.question_total %></dd>
  <dt><strong><%= model_class.human_attribute_name(:overall_rating) %>:</strong></dt>
  <dd><%= @quizz.overall_rating %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              quizzs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_quizz_path(@quizz), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              quizz_path(@quizz),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
